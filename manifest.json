{
  "manifest_version": 2,
  "name": "Bitbucket Notifier",
  "version": "0.5.1",
  "description": "Bitbucket integration tool. Notifies updates about pull requests (so far)",
  "browser_action": {
    "default_icon": "assets/img/bitbucket_logo.png",
    "default_popup": "build/views/popup.html"
  },
  "icons": {
    "128": "assets/img/bitbucket_logo_raw.png"
  },
  "permissions": [
    "notifications",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "page": "build/views/background.html",
    "persistent": true
  },
  "options_page": "build/views/options.html",
  "update_url": "http://bitbucket-notifier.kubaturek.pl/update.xml",
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+B"
      },
      "global": true
    }
  }
}
