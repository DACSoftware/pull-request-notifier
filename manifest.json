{
  "manifest_version": 2,
  "name": "Bitbucket Notifier",
  "version": "0.0.1",
  "description": "Bitbucket integration tool. Notifies updates about pull requests (so far)",
  "browser_action": {
    "default_icon": "assets/img/bitbucket_logo.png",
    "default_popup": "dist/views/popup.html"
  },
  "permissions": [
    "notifications",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "page": "dist/views/background.html",
    "persistent": true
  }
}
