{
  "manifest_version": 2,
  "name": "Bitbucket Notifier",
  "version": "0.6.0",
  "description": "Bitbucket integration tool. Notifies updates about pull requests (so far)",
  "browser_action": {
    "default_icon": "img/bitbucket_logo.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "img/bitbucket_logo_raw.png"
  },
  "permissions": [
    "notifications",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "options_page": "options.html",
  "update_url": "http://bitbucket-notifier.kubaturek.pl/update.xml",
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+B"
      },
      "global": true
    }
  }
}
