{
  "manifest_version": 2,
  "name": "Pull Request Notifier",
  "version": "0.6.0",
  "description": "Pull reuqests notifications",
  "browser_action": {
    "default_icon": "img/bitbucket_logo.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "img/bitbucket_logo_raw.png"
  },
  "permissions": [
    "notifications",
    "storage",
    "cookies",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "options_page": "options.html",
  "update_url": "http://your-url.com/update.xml",
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+B"
      },
      "global": true
    }
  },
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'"
}
